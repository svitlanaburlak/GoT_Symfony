{% extends 'base.html.twig' %}

{% block body %}

<main>
    <div class="wrapper">

    <ul class="characters-list">

        {% for personage in personages %}
            <li class="character-card">
                <a href="{{ path('app_personage', {'id': personage.id}) }}">

                    <div class="avatar" style="background: #e3e3e3;">
                        <img src="{{ asset('images/'~ personage.image)}}" alt="Arya">
                    </div>
                    <div class="name">
                        {{personage.firstname}}
                    </div>
                </a>
            </li>
        {% endfor %}    
    </ul>

    </div>
</main>

{% endblock %}
